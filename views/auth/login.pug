extends ../layouts/common

block content   
  h1 Login
  
  if errors
    each error in errors
      .alert.alert-danger.col-sm-3= error

  form(action="/auth/login", method="POST")

    .form-group.col-sm-4
      lable(for="email") Email:
      input#email.form-control(name="email", type="text", value=values ? values.email : '')
    .form-group.col-sm-4
      lable(for="password") Password:
      input#password.form-control(name="password", type="password", value=values ? values.password : '')

    button.btn.btn-primary.ml-3 login