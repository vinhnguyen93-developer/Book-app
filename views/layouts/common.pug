          img.rounded-circle.mr-2(src=user.avatar, width="32")
        else
          img.rounded-circle.mr-2(src='https://res.cloudinary.com/vinhnguyen93/image/upload/w_1000,c_fill,ar_1:1,g_auto,r_max,bo_5px_solid_red,b_rgb:262c35/v1588557922/samples/bike.jpg', width="32")
