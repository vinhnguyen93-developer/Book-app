extends ../layouts/common

block content   
  h1 Create a new user
  
  if errors
    each error in errors
      .alert.alert-danger.col-sm-3= error

  .d-flex.align-items-center
    form.d-flex(action="/users/create", method="POST")
      lable.sr-only Name
      input.form-control(name="name", type="text", placeholder="Your name", value=values ? values.name : '')
      button.btn.btn-primary.ml-2 create